.side-bar
  .side-bar__header
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li
          =link_to new_group_path, class: "top-items__icons--icon" do
            %i.fas.fa-edit
        %li
          =link_to edit_user_path(current_user), class: "top-items__icons--icon" do
            %i.fas.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message